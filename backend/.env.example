# 服务器配置
NODE_ENV=development
PORT=3001

# 数据库配置
# 格式: postgresql://用户名:密码@主机:端口/数据库名?schema=public&connection_limit=20&pool_timeout=30
# connection_limit: 连接池大小（默认根据CPU核心数计算）
# pool_timeout: 连接等待超时时间（秒）
DATABASE_URL="postgresql://username:password@localhost:5432/oa_system?schema=public&connection_limit=20&pool_timeout=30"

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=OA System <oa@example.com>

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs
