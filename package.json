{
  "name": "oa-system",
  "version": "2.0.1",
  "description": "OA办公自动化系统 - 重构版",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently --raw \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:pretty": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npx vite --clearScreen false",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "serve": "cd backend && npm start",
    "setup": "npm run install:all && npm run db:up && npm run db:migrate && npm run db:seed",
    "db:up": "docker-compose up -d postgres",
    "db:down": "docker-compose down",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:studio": "cd backend && npm run db:studio",
    "db:reset": "cd backend && npm run db:migrate reset",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint",
    "type-check": "cd backend && npm run type-check && cd ../frontend && npm run type-check"
  },
  "devDependencies": {
    "@types/dagre": "^0.7.53",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.9",
    "concurrently": "^8.2.2",
    "socket.io": "^4.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@xyflow/react": "^12.10.0",
    "dagre": "^0.8.5",
    "express-rate-limit": "^8.2.1"
  }
}
